 <h3>スケジュール詳細</h3>
 
    <table>
      <tr>
        <th>タイトル</th>
        <td><%= @user.title %></td>
      </tr>
      <tr>
        <th>開始日</th>
        <td><%= @user.startdate %></td>
      </tr>
      <tr>
        <th>投稿日時</th>
        <td><%= @user.enddate %></td>
      </tr>
      <tr>
        <th>終日</th>
        <td>
        <% if @user.allday == "1" %>
            ◯
        <% else @user.allday == "0" %>
        <% end %>
        </td>
      </tr>
      <tr>
        <th>スケジュールメモ</th>
        <td><%= @user.introduction %></td>
      </tr>
    </table>
 
    <div>
      <ul>
        <li><%= link_to "ユーザー情報一覧に戻る", :users %></li>
      </ul>
    </div>